                VerticalAlignment="Top"
                Margin="788,24,-6,0"
                Foreground="{StaticResource Borders}"
                Visibility="{Binding Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=TaskSearchBox}"/>
            <Label IsHitTestVisible="False"
                Content="Search Teams..."
                Grid.Row="2"
                VerticalAlignment="Top"
                Margin="788,24,-6,0"
                Foreground="{StaticResource Borders}"
                Visibility="{Binding Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=TaskSearchBox}"/>
            <Label IsHitTestVisible="False"
                Content="Search Teams..."
                Grid.Row="2"
                VerticalAlignment="Top"
                Margin="788,24,-6,0"
                Foreground="{StaticResource Borders}"
                Visibility="{Binding Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=TaskSearchBox}"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="73,3,0,0" TextWrapping="Wrap" Text="Team Id" VerticalAlignment="Top" Width="77" FontWeight="Bold" Foreground="#FF276810" Grid.Row="3" FontSize="15"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="242,3,0,0" TextWrapping="Wrap" Text="Team Name" VerticalAlignment="Top" Width="118" FontWeight="Bold" Foreground="#FF276810" Grid.Row="3" FontSize="15"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="479,3,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="76" FontWeight="Bold" Foreground="#FF276810" Grid.Row="3" FontSize="15"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="621,3,0,0" TextWrapping="Wrap" Text="Admin Id" VerticalAlignment="Top" Width="82" FontWeight="Bold" Grid.Row="3" FontSize="15" Foreground="#FF276810"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="775,3,0,0" TextWrapping="Wrap" Text="Admin User" VerticalAlignment="Top" Width="100" FontWeight="Bold" Foreground="#FF276810" Grid.Row="3" FontSize="15"/>
            <TextBlock HorizontalAlignment="Left" Height="27" Margin="969,3,0,0" TextWrapping="Wrap" Text="Action" VerticalAlignment="Top" Width="76" FontWeight="Bold" Foreground="#FF276810" Grid.Row="3" FontSize="15"/>
            <TextBox x:Name="TaskSearchBox_Copy2"
                Style="{StaticResource TaskListSearchBox}"
                Grid.Row="3"
                Margin="1039,64,71,527"/>
        </Grid>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Height="54" Margin="62,115,0,0" TextWrapping="Wrap" Text="Add" VerticalAlignment="Top" Width="68" FontSize="30" FontWeight="Bold" Foreground="#FF265F1C"/>
        <Button Grid.Column="1" Margin="52,228,49,50" BorderBrush="#FFABA5A5" Height="1"/>
    </Grid>
</Window>
