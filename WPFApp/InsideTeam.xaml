<Window x:Class="WPFApp.InsideTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="InsideTeam" Height="832" Width="1250"
        MinWidth="1150" MinHeight="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="93*"/>
            <RowDefinition Height="179*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!--Nav pane-->
        <Rectangle Fill="{StaticResource AccentDark}" Grid.RowSpan="2"/>
        <StackPanel Margin="10,15,10,15" Grid.RowSpan="2">
            <Button Style="{StaticResource TaskManagerNavButton}" />
            <Viewbox Width="25" Height="25">
                <fa:ImageAwesome Style="{StaticResource ListIcon}"/>
            </Viewbox>
            <Button/>
            <Button Style="{StaticResource TaskManagerNavButton}" />
            <Viewbox Width="25" Height="25">
                <fa:ImageAwesome Style="{StaticResource TickIcon}"/>
            </Viewbox>
            <Button/>
            <Button Style="{StaticResource TaskManagerNavButton}" />
            <Viewbox Width="25" Height="25">
                <fa:ImageAwesome Style="{StaticResource TimerIcon}"/>
            </Viewbox>
            <Button/>
        </StackPanel>
        <!--Task List Background-->
        <Rectangle Fill="{StaticResource TaskListBackground}"
     Grid.Column="1" Grid.RowSpan="2"/>
        <!--Task List Grid-->
        <Grid Grid.Column="1" Opacity="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!--Task Label-->
            <Label Style="{StaticResource Heading1}" 
     Content="Teams" 
     VerticalAlignment="Top"
     Padding="20 0 0 0"
     IsHitTestVisible="False" FontSize="70" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Height="78" Grid.RowSpan="3" Margin="0,24,0,0"/>
            <!--Add new Task Button-->
            <!--Search Task Bar-->
            <Button Style="{StaticResource SearchButton}"
         Grid.Row="2"
         HorizontalAlignment="Right"
         VerticalAlignment="Top"
         Margin="0,23,56,0"
         Padding="10"
         Background="White"
         BorderBrush="Transparent"
         Height="30"
         Width="30"
        >
                <!-- Kết nối sự kiện -->
                <Viewbox Width="16" Height="16"/>
            </Button>
        </Grid>
    </Grid>
</Window>
