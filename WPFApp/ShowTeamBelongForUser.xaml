<Window x:Class="WPFApp.ShowTeamBelongForUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Teams" Height="490" Width="830"
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize"  
        FontFamily="Comic Sans MS" 
        WindowStyle="None">

    <Border BorderThickness="2" BorderBrush="Transparent" Background="#D1E8E2" CornerRadius="10">
        <Grid>
            <Label Content="Enter User ID:" 
                   HorizontalAlignment="Left" 
                   Margin="29,10,0,0" 
                   VerticalAlignment="Top" 
                   FontSize="20" 
                   Foreground="#2c3532" 
                   FontWeight="Bold"/>

            <TextBox x:Name="UserIdTextBox" 
                      HorizontalAlignment="Left" 
                      Margin="214,20,0,0" 
                      VerticalAlignment="Top" 
                      Width="273" 
                      FontSize="16"/>

            <Button x:Name="LoadTeamsButton" 
                    Content="Load Teams" 
                    HorizontalAlignment="Left" 
                    Margin="528,24,0,0" 
                    VerticalAlignment="Top" 
                    Background="#389583" 
                    Foreground="White" 
                    Click="LoadTeamsButton_Click"/>

            <Label Content="Teams Belonging to User" 
                   HorizontalAlignment="Left" 
                   Margin="29,38,0,0" 
                   VerticalAlignment="Top" 
                   FontSize="30" 
                   Foreground="#2c3532" 
                   FontWeight="Bold"/>

            <Rectangle HorizontalAlignment="Left" 
                       Height="369" 
                       Width="578" 
                       Margin="20,95,0,0" 
                       Stroke="Black" 
                       VerticalAlignment="Top" 
                       Fill="#E0E0E0" 
                       RadiusX="20" 
                       RadiusY="20"/>

            <ListBox x:Name="TeamsListBox" 
                     ItemsSource="{Binding Teams}" 
                     DisplayMemberPath="Name" 
                     HorizontalAlignment="Left" 
                     Margin="46,110,0,0" 
                     VerticalAlignment="Top" 
                     Width="400" 
                     Height="300" 
                     BorderBrush="#2c3532" 
                     Background="#ffffff" 
                     FontSize="16"
                     SelectionChanged="TeamsListBox_SelectionChanged"/>

            <Button x:Name="ViewTasksButton" 
                    Content="View Tasks" 
                    HorizontalAlignment="Left" 
                    Margin="510,389,0,0" 
                    VerticalAlignment="Top" 
                    Background="White" 
                    Foreground="#389583"
                    IsEnabled="False" 
                 />

            <Button x:Name="BackButton" 
                    Content="Back" 
                    HorizontalAlignment="Left" 
                    Margin="607,389,0,0" 
                    VerticalAlignment="Top" 
                    Background="#ab3b61" 
                    Foreground="White" 
                    Click="BackButton_Click" Width="72"/>
        </Grid>
    </Border>
</Window>
